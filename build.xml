<?xml version="1.0"?>
<project name="Functions" default="run">
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.11</version>
      <scope>test</scope>
    </dependency>
    <target name="compile">
        <mkdir dir="build/classes"/>
        <javac destdir="build/classes" includeantruntime="false">
            <src path="src"/>
        </javac>
    </target>
    <target name="run" depends="compile">
        <java classname="Functions" classpath="build/classes"/>
    </target>
    <target name="clean">
        <delete dir="build"/>
    </target>
    <target name="package" depends="compile">
        <jar destfile="${build}/${ant.project.name}.jar" basedir="${classes}">
            <manifest>
                <attribute name="Mainâ€“Class" value="${ant.project.name}"/>
            </manifest>
        </jar>
    </target>
    <target name="test" depends="compile">
        <junit>
            <classpath>
                <pathelement location="${classes}"/>
            </classpath>
            <test name="FunctionsTest"/>
        </junit>
    </target>
</project>
